{
  "description": "Tests PubNub to validate that channels can be subscribed to and that messages can be sent and received.",
  "has_cleanup_tasks": false,
  "logical_name": "pubnub",
  "publisher": "Metrist",
  "repository": "https://docs.metrist.io/monitors/",
  "runtime_type": "dll",
  "steps": [
    {
      "description": "Subscribes to a channel.",
      "logical_name": "SubscribeToChannel",
      "name": "Subscribe To Channel",
      "default_timeout_seconds": 900,
      "docs_url": ""
    },
    {
      "description": "Sends a message to the channel.",
      "logical_name": "SendMessage",
      "name": "Send Message",
      "default_timeout_seconds": 900,
      "docs_url": ""
    },
    {
      "description": "Receives a message from the channel.",
      "logical_name": "ReceiveMessage",
      "name": "Receive Message",
      "default_timeout_seconds": 900,
      "docs_url": ""
    }
  ],
  "version": "0.1.0-beta",
  "package_name": "pubnub",
  "config_values": [
    {
      "description": "The UUID to use.",
      "required": true,
      "name": "UUID",
      "environment_variable_name": "METRIST_PUBNUB_UUID"
    },
    {
      "description": "The subscribe key to use.",
      "required": true,
      "name": "SubscribeKey",
      "environment_variable_name": "METRIST_PUBNUB_SUBSCRIBE_KEY"
    },
    {
      "description": "The publish key to use.",
      "required": true,
      "name": "PublishKey",
      "environment_variable_name": "METRIST_PUBNUB_PUBLISH_KEY"
    }
  ]
}
